[Unit]
Description=Expo App Service
After=network.target

[Service]
Type=simple
User=www-data
WorkingDirectory=/var/www/expo-app
Environment=NODE_ENV=production
Environment=PORT=3000
ExecStart=/usr/bin/npx expo start --web --port 3000
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
